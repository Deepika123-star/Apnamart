<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="top|bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Guest"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/login_or_sign_up"
        android:textColor="@color/quantum_lightblue"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:drawableStart="@drawable/ic_baseline_edit_location_24"
        android:text="Add an address"
        android:layout_marginTop="@dimen/_16sdp"
        android:drawableTint="@android:color/holo_red_dark"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/colorPrimaryDark"
        android:drawablePadding="@dimen/_10sdp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/colorPrimaryDark"/>


    <TextView
        android:id="@+id/tvAppPages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_16sdp"
        android:paddingStart="@dimen/_5sdp"
        android:text="Refund Terms &amp; Policies"
        android:textColor="@android:color/black"
        android:drawableEnd="@drawable/down_icon"
        android:drawablePadding="9dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_terms"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <LinearLayout
        android:id="@+id/ll_apppages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingStart="46dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refund Policy"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@android:color/black"/>

    </LinearLayout>
    <!--<TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_subtitle" />-->

</LinearLayout>
